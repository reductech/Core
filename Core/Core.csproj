<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RootNamespace>Reductech.EDR.Core</RootNamespace>
    <AssemblyName>Reductech.EDR.Core</AssemblyName>
    <Nullable>enable</Nullable>
    <Version>0.4.0$(VersionSuffix)</Version>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Reductech.EDR.Core</PackageId>
    <Title>EDR Core SDK</Title>
    <Description>Class library for automating e-discovery and forensic workflows.</Description>
    <Product>EDR</Product>

    <PackageProjectUrl>https://gitlab.com/reductech/edr/core</PackageProjectUrl>
    <RepositoryUrl>https://gitlab.com/reductech/edr/core</RepositoryUrl>
    <PackageReleaseNotes>Please see https://gitlab.com/reductech/edr/core/-/releases</PackageReleaseNotes>
    <PackageTags>ediscovery;forensics;automation;orchestration;edrm</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

    <Authors>reductech</Authors>
    <Company>Reductech</Company>
    <Copyright>Copyright (c) 2020 Reductech Ltd</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CSharpFunctionalExtensions" Version="2.13.1" />
    <PackageReference Include="CsvHelper" Version="17.0.0" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.3.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
    <PackageReference Include="Namotion.Reflection" Version="1.0.14" />
    <PackageReference Include="OneOf" Version="2.1.155" />
    <PackageReference Include="Superpower" Version="2.3.0" />
    <PackageReference Include="System.Linq.Async" Version="5.0.0" />
    <PackageReference Include="YamlDotNet" Version="9.1.0" />
  </ItemGroup>

</Project>
