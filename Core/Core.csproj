<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RootNamespace>Reductech.EDR.Core</RootNamespace>
    <AssemblyName>Reductech.EDR.Core</AssemblyName>
    <Nullable>enable</Nullable>
    <Version>0.4.0$(VersionSuffix)</Version>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Reductech.EDR.Core</PackageId>
    <Title>EDR Core SDK</Title>
    <Description>Class library for automating e-discovery and forensic workflows.</Description>
    <Product>EDR</Product>

    <PackageProjectUrl>https://gitlab.com/reductech/edr/core</PackageProjectUrl>
    <RepositoryUrl>https://gitlab.com/reductech/edr/core</RepositoryUrl>
    <PackageReleaseNotes>Please see https://gitlab.com/reductech/edr/core/-/releases</PackageReleaseNotes>
    <PackageTags>ediscovery;forensics;automation;orchestration;edrm</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>

    <Authors>reductech</Authors>
    <Company>Reductech</Company>
    <Copyright>Copyright (c) 2020 Reductech Ltd</Copyright>
  </PropertyGroup>

  <ItemGroup Condition="'$(CI)' == ''">
    <Antlr4 Include="Parser\SCL.g4">
      <Listener>false</Listener>
      <Error>true</Error>
      <AntOutDir>Antlr</AntOutDir>
      <Package>Reductech.EDR.Core.Parser</Package>
    </Antlr4>
  </ItemGroup>

  <ItemGroup Condition="'$(CI)' != ''">
    <None Include="Antlr/*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="StrykerOutput\**" />
    <EmbeddedResource Remove="StrykerOutput\**" />
    <None Remove="StrykerOutput\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Parser\SCL.g4" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.9.0" />
    <PackageReference Include="Antlr4BuildTasks" Version="8.8.0" />
    <PackageReference Include="CSharpFunctionalExtensions" Version="2.13.2" />
    <PackageReference Include="CsvHelper" Version="18.0.0" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.3.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
    <PackageReference Include="Namotion.Reflection" Version="1.0.14" />
    <PackageReference Include="OneOf" Version="3.0.162" />
    <PackageReference Include="System.Linq.Async" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Antlr\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Logging\LogMessages-En.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>LogMessages-EN.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Logging\LogMessages-EN.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>LogMessages-En.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
