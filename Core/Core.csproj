<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <RootNamespace>Reductech.EDR.Core</RootNamespace>
    <AssemblyName>Reductech.EDR.Core</AssemblyName>
    <Nullable>enable</Nullable>
    <Version>0.2.0-alpha$(VersionSuffix)</Version>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Reductech.EDR.Core</PackageId>
    <Title>EDR Core SDK</Title>
    <Description>Class library for automating e-discovery and forensic workflows.</Description>
    <Product>EDR</Product>

    <PackageProjectUrl>https://gitlab.com/reductech/edr/core</PackageProjectUrl>
    <RepositoryUrl>https://gitlab.com/reductech/edr/core</RepositoryUrl>
    <PackageReleaseNotes>Please see https://gitlab.com/reductech/edr/core/-/releases</PackageReleaseNotes>
    <PackageTags>ediscovery,forensics,automation,orchestration,edrm</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    
    <Authors>Reductech</Authors>
    <Company>Reductech</Company>
    <Copyright>Copyright (c) 2020 Reductech Ltd</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CSharpFunctionalExtensions" Version="2.11.5" />
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.3" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.0" />
    <PackageReference Include="Namotion.Reflection" Version="1.0.8" />
    <PackageReference Include="Superpower" Version="2.3.0" />
    <PackageReference Include="YamlDotNet" Version="8.1.0" />
  </ItemGroup>

</Project>
